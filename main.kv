<Label>:
    font_name: 'droid.ttf'
    bold:True
<Dutton@Button>:
    font_name: 'droid.ttf'
    markup:True
<TextInput>:
    font_name: 'droid.ttf'
    bold:True
<ToggleButton>:
    font_name: 'droid.ttf'
    
<MyLayout>:
    address:address
    portnum:portnum
    output:output
    result:result
    tnum:tnum
    timeout:timeout
    orientation: 'vertical'
    padding:(36,36)
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'22.jpg'

    Label:
        text: '网络地址: (网段以0结尾，多个空格隔开)'
        text_size: (self.width,None)
        halign: 'left'
        valign: 'top'
        size_hint: (1,None)
        height: '48dp'
        padding:(10,0.5*(self.height-self.line_height))
    TextInput:
        id: address          
        size_hint: (1,None)
        height: '48dp'
        text: '127.0.0.1'
        padding:(10,0.5*(self.height-self.line_height))
        background_normal:'3.png'       
    Label:
        size_hint_y:None
        height:'6dp'
    BoxLayout:
        orientation:'horizontal'
        size_hint_y:None
        height:'48dp'
        
        Label:
            text: '端口范围: (指定端口一个就行)'
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint: (0.6,None)
            height: '48dp'
            padding:(10,0.5*(self.height-self.line_height))
        TextInput:
            id: portnum
            size_hint: (0.4,None)
            height: '48dp'
            text: '0,655'
            padding:(10,0.5*(self.height-self.line_height))
            background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'6dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:None
        height:'48dp'
        Label:
            text: '线程数: (默认25)'
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint: (0.6,None)
            height: '48dp'
            padding:(10,0.5*(self.height-self.line_height))

        TextInput:
            id: tnum
            size_hint: (0.4,None)
            height: '48dp'
            text: '25'
            padding:(10,0.5*(self.height-self.line_height))
            background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'6dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:None
        height:'48dp'
        Label:
            text: 'socket超时秒数: (默认3)'
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint: (0.6,None)
            height: '48dp'
            padding:(10,0.5*(self.height-self.line_height))

        TextInput:
            id: timeout
            size_hint: (0.4,None)
            height: '48dp'
            text: '3'
            padding:(10,0.5*(self.height-self.line_height))
            background_normal:'3.png'
          
    Label:
        size_hint_y:None
        height: '20dp'
    Dutton:
        id:start
        text: '[b]开始扫描[/b]'
        size_hint: (1,None)
        height: '64dp'
        background_normal:'3.png'
        background_down:'2.png'
        on_press: root.start()
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:None
        height:'48dp'
        Label:
            text: '扫描状态:'
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint: (0.3,None)
            height: '48dp'
            padding:(10,0.5*(self.height-self.line_height))
         
        Label:
            id: output
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint: (0.7,None)
            height: '48dp'
            padding:(10,0.5*(self.height-self.line_height))
        
    Label:
        text: '扫描结果:'
        text_size: (self.width,None)
        halign: 'left'
        valign: 'top'
        size_hint: (1,None)
        height: '48dp'
        padding:(10,0.5*(self.height-self.line_height))
    ScrollView:
        Label:
            id: result
            text_size: (self.width,None)
            halign: 'left'
            valign: 'top'
            size_hint_y:None
            height: self.texture_size[1]

    
    
  
